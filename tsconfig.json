{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "types": [
      "react",
      "react-native",
      ],
    "skipLibCheck": true,
    "jsx": "react"
  },
  "include": [
    "src/**/*",                  // Include all files in the 'src' directory
   "App.tsx",                   // Include main entry file for Expo/React Native project
    "node_modules/@react-navigation/*",
    "node_modules/@react-native-community/*",
    "node_modules/react-native/*",
    "node_modules/react/*",
    "module.declaration.d.ts"
  ],
}
